# ========================================
# YTDLP FastAPI 简化配置文件
# ========================================

# ===== 核心功能配置 =====
# 直链模式开关（推荐保持开启）
# 1 = 直链模式：直接返回 YouTube 真实下载链接
# 0 = 代理模式：返回加密的本地代理链接（需要额外配置）
DIRECT_LINK_MODE=1

# ===== 域名和访问控制 =====
# 允许访问的域名白名单，支持通配符，多个域名用逗号分隔
# 示例：yourdomain.com,*.vercel.app,localhost,127.0.0.1
ALLOWED_HOSTS="localhost,127.0.0.1,*.vercel.app"

# ===== API 鉴权配置 =====
# 主 API 访问密钥（简单模式）
# 客户端需要在 X-Secret 请求头中传递此值
SECRET_KEY="your-main-secret-key-2024"

# 多域名多密钥配置（高级模式，可选）
# 格式：domain1:key1,domain2:key2
# 示例：site1.com:key123,site2.com:key456,*.vercel.app:vercelkey
# 如果不需要多密钥，保持为空即可
MULTI_DOMAIN_KEYS=""

# ===== 功能开关（全部禁用以简化） =====
# 禁用人机验证（简化，不需要验证码）
DISABLE_TURNSTILE=1

# 禁用 API 文档（可选，0=显示文档，1=隐藏文档）
DISABLE_DOCS=0

# 禁用演示页面（可选，0=显示演示，1=隐藏演示）
DISABLE_DEMO=0

# 禁用额外的主机验证（简化）
DISABLE_HOST_VALIDATION=1

# ===== WARP 代理池配置 =====
# WARP 配置文件目录（相对路径）
WARP_CONFIG_DIR="warp-configs"

# 代理池健康检查间隔（秒）
PROXY_HEALTH_CHECK_INTERVAL=300

# 是否启用 WARP 代理池（1=启用，0=禁用）
ENABLE_WARP_PROXY=1

# ===== 以下配置在直链模式下可忽略 =====
# 加密密钥（仅代理模式需要，直链模式忽略）
CRYPT_KEY="fl5JcIwHh0SM87Vl18B_Sn65lVOwhYIQ3fnfGYqpVlE="

# 加密数据有效期（仅代理模式需要，直链模式忽略）
CRYPT_TTL=28800

# Turnstile 站点密钥（已禁用，可忽略）
TURNSTILE_SITE_KEY=""

# REST 模式（通常不需要）
REST_MODE=0

# Cookies 配置（通常不需要）
COOKIES_URL=""
